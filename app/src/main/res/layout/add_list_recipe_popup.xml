<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:background="@drawable/roudbordewhite">

    <EditText
        android:id="@+id/addListRecipeEditText"
        android:layout_width="380dp"
        android:layout_height="65dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="11dp"
        android:hint="Enter URL:"
        android:inputType="text"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorWhite"
        android:backgroundTint="@color/colorWhite"/>


    <Button
        android:id="@+id/addListRecipeButton"
        android:layout_width="174dp"
        android:layout_height="78dp"
        android:layout_below="@+id/addListRecipeEditText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="109dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="128dp"
        android:background="@drawable/roundbordertransparent"
        android:text="Add"
        android:textColor="@color/colorWhite"
        android:layout_marginBottom="20dp"/>
</RelativeLayout>